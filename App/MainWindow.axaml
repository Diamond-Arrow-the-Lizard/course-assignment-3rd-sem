<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="AirlinesSystem.AvaloniaApp.MainWindow"
        mc:Ignorable="d"
        Title="Авиакомпания" Width="800" Height="600">

    <DockPanel>
        <!-- Верхняя панель меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Разделы">
                <MenuItem Header="Авиалайнеры" />
                <MenuItem Header="Маршруты" />
                <MenuItem Header="Билеты" />
                <MenuItem Header="Экипажи" />
            </MenuItem>
        </Menu>

        <!-- Центральная область -->
        <Grid>
            <TextBlock Text="Добро пожаловать в систему управления авиакомпанией!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16" />
        </Grid>

        <!-- Нижняя панель статуса -->
        <Border DockPanel.Dock="Bottom" Background="LightGray" Padding="5">
            <TextBlock Text="Статус: готово" />
        </Border>
    </DockPanel>
</Window>
